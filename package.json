{
  "name": "base-miniapp",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.js --network baseSepolia",
    "deploy:portal": "npx hardhat run scripts/deployMessagePortal.js --network baseSepolia",
    "deploy:portal:local": "npx hardhat run scripts/deployMessagePortalLocal.js --network localhost",
    "dev:chain": "npx hardhat node",
    "portal:local": "sleep 3 && npm run deploy:portal:local && cd frontend && npm run dev:portal",
    "dev:portal:local": "npm-run-all -p dev:chain portal:local",
    "frontend": "cd frontend && npm install && npm run dev"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "dotenv": "^16.0.0",
    "hardhat": "^2.18.0",
    "npm-run-all": "^4.1.5"
  }
}
